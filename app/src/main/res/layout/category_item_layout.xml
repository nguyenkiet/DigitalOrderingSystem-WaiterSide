<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#3F51B5">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/selectedTextViewPrice"
        android:layout_gravity="right"
        style="@style/TextColorWhite"

        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/waiterSelectedImage"
        android:layout_toEndOf="@+id/waiterSelectedImage" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/waiterSelectedImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:src="@drawable/navigate_next"
        android:layout_alignTop="@+id/selectedTextViewPrice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

</RelativeLayout>