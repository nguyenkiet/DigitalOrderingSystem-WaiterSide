<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FB5C3C" />
         <gradient android:angle="-90" android:startColor="#fb5230" android:endColor="#fb5230"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FB5C3C" />
         <solid android:color="#FB5C3C"/>
     </shape>
 </item>
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FB5C3C" />
         <gradient android:angle="-90" android:startColor="#FB5C3C" android:endColor="#FB5C3C" />
     </shape>
 </item>
</selector>